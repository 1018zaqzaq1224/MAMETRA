<section id="home" class="home open">
</section>
<section id="used&clothing" class="used&clothing open">
	<%= link_to products_path do %>
	<h1>USED CLOTHING</h1>
	<% end %>
	<div class="section-content">
	</div>
</section>
<section id="deli&cafe" class="deli&cafe open">
	<%= link_to delis_path do %>
	<h1>DELI CAFE</h1>
	<% end %>
	<div class="section-content">
	</div>
</section>
<section id="artspace" class="artspace open active">
	<%= link_to arts_path, style: "color: #fff;" do %>
	<h1>ART SPACE</h1>
	<% end %>
	<div class="section-content">
		<div class="section-main">
			<h2>ArtSpace Infomation</h2>
			<% @arts.each do |art| %>
			<div class="art-content">
				<div class="event-info">
					<p class="event-period"><%= art.start_date %>~<%= art.end_date %></p>
					<h2 class="event-name"><%= art.event_name %></h2>
					<h3 class="artist-name"><%= art.artist_name %></h3>
					<%= simple_format(art.event_info, :class => "event-text") %>
				</div>
				<div>
					<ul class="event-photo">
						<% art.art_images.each do |image| %>
							<%= attachment_image_tag image, :image %>
						<% end %>
					</ul>
				</div>
			</div>
			<% end %>
		</div>
	</div>
</section>
<div class="panel panel-default container", style="margin-top: 70px;" >
	<div class="panel-body" >
		<%= form_for(@snap, url: admin_snaps_path, html: {class: 'form-horizontal'}) do |f| %>
			<div class="form-group">
				<label class="col-sm-2 control-label" for="InputText">Snap Name</label>
				<div class="col-sm-10">
					<%= f.text_field :snap_name, id:"InputText", class:"form-control", placeholder:"スナップ名を入力して下さい。" %>
				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-2 control-label" for="InputFile">Snap Image</label>
				<div class="col-sm-10">
					<%= f.attachment_field :snap_images_images, multiple: true %>
				</div>
			</div>
			<%= f.hidden_field :id %>
				<%= render partial: 'admin/snaps/form', locals: {f: f } %>
			<%= f.submit '作成する', class:"btn btn-primary center-block" %>
		<% end %>
	</div>
	<div class="panel-footer" >
	</div>
</div>

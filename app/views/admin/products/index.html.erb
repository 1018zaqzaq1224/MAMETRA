<div class="section-content">
			<div class="section-main2">
				<div class="product-list">
			<ul>
				<% @products.each do |product| %>
					<li class="box-number2">
						<div class="product-inner">
								<ul class="productimage">
									<% product.product_images.each do |image| %>
										<%= attachment_image_tag image, :image %>
									<% end %>
								</ul>
							<div class="name">
								<p>
									<span><%= product.gender %>(<%= product.size %>)</span>
									<%= product.product_name %>
								</p>
							</div>
							<p class="priceen">¥<%= product.price %>+tax
							<span><%= product.statuss %></span></p>
						</div>
						<%= link_to "編集", edit_admin_product_path(product), class:"btn btn-primary btn-xs" %>
						<%= link_to "削除", admin_product_path(product), method: :delete, class:"btn btn-danger btn-xs", "data-confirm" => "本当に削除しますか？" %>
						<%= link_to product.statuss, admin_product_toggle_statuss_path(product), method: :patch, class:"btn btn-warning btn-xs" %>
					</li>
				<% end %>
			</ul>
		</div>
	</div>
</div>
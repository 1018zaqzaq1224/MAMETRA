<div class="panel panel-default container", style="margin-top: 70px;" >
	<div class="panel-body" >
		<%= form_for(@art, url: admin_arts_path, html: {class: 'form-horizontal'}) do |f| %>
			<div class="form-group">
				<label class="col-sm-2 control-label" for="InputText">Event Name</label>
				<div class="col-sm-10">
					<%= f.text_field :event_name, id:"InputText", class:"form-control", placeholder:"イベント名を入力して下さい。" %>
				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-2 control-label" for="InputText">Artist Name</label>
				<div class="col-sm-10">
					<%= f.text_field :artist_name, id:"InputText", class:"form-control", placeholder:"アーティスト名を入力して下さい。" %>
				</div>
			</div>
			<div class="form-group" id="datepicker-daterange">
				<label class="col-sm-2 control-label">Start ~ End</label>
				<div class="col-sm-9 form-inline">
					<div class="input-daterange input-group" id="datepicker">
						<%= f.date_field :start_date, id:"InputText", class:"form-control" %>
						<span class="input-group-addon">to</span>
						<%= f.date_field :end_date, id:"InputText", class:"form-control" %>
					</div>
				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-2 control-label" for="InputFile">Art Image</label>
				<div class="col-sm-10">
					<%= f.attachment_field :art_images_images, id:"InputFile", multiple: true %>
				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-2 control-label" for="InputTextarea">Art Info</label>
				<div class="col-sm-10">
					<%= f.text_area :event_info, id:"InputTextarea", class:"form-control", placeholder:"イベント情報を入力してください。", rows:"8" %>
				</div>
			</div>
			<%= f.submit '編集する', class:"btn btn-primary center-block" %>
		<% end %>
	</div>
	<div class="panel-footer" >
	</div>
</div>

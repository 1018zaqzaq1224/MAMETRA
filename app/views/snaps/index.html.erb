<section id="home" class="home open">
</section>
<section id="used&clothing" class="used&clothing open active">
	<h1><%=link_to "USED CLOTHING", products_path, style: "color: #fff;" %></h1>
	<div class="section-content">
		<div class="section-main">
			<div class="breadcrumbs">
			<%= link_to "HOME", homes_path %>
			>
			<%= link_to "USED CLOTHING", products_path %>
			> SNAP SHOT
			</div>
			<div id="nav-bar">
				<ul class="nav">
				<%= link_to "SNAP SHOT", snaps_path, class: "genderlist" %>
				</ul>
			</div>
			<div class="snapshot-list">
				<ul>
					<%= @snaps.each do |snap| %>
						<li class="box-number">
							<div class="snapshot-inner">
								<div>
									<ul class="snapshotimage">
									<% @snap.snap_images.each do |image| %>
										<%= attachment_image_tag image%>
									<% end %>
									</ul>
								</div>
								<table class="snapinfo">
									<th class="snapname"><%= @snap.snap_name %></th>
									<tr>
										<td class="genre"><%= @genre.genre_name %></td>
										<td class="snapitem"><%= @snap.snap_item %></td>
									</tr>
								</table>
							</div>
						</li>
					<% end %>
				</ul>
			</div>
		</div>
	</div>
</section>
<section id="deli&cafe" class="deli&cafe">
<h1><%=link_to "DELI CAFE", delis_path %></h1>
<div class="section-content">
</div>
</section>
